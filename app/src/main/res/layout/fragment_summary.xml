<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp" tools:srcCompat="@tools:sample/backgrounds/scenic[1]"
                    android:id="@+id/imgSumIcon" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="BILGEWATERS CALL"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/txtSumName"
                    app:layout_constraintStart_toEndOf="@+id/imgSumIcon" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
                    android:textSize="24sp"/>
            <TextView
                    android:text="Lvl 192"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSumLvl"
                    app:layout_constraintTop_toBottomOf="@+id/txtSumName" android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imgSumIcon"
                    android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
    >

        <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardView2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/cardView4"
                android:layout_marginEnd="4dp" android:layout_width="0dp" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" android:layout_marginStart="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@color/goldElo"
                    android:id="@+id/constraintLayoutSumSolo">
                <TextView
                        android:text="IV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumRankedSolo"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="24sp" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/txtSumRankedSoloPoints"/>
                <TextView
                        android:text="33 LP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumRankedSoloPoints"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.495"
                        android:layout_marginBottom="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="194dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_alignParentEnd="true"
                app:layout_constraintStart_toEndOf="@+id/cardView2" android:layout_marginStart="4dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/cardView4"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@color/masterElo"
                    android:id="@+id/constraintLayoutSumFlex">

                <TextView
                        android:text="II"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumRankedFlex"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="24sp" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/txtSumRankedFlexPoints"/>
                <TextView
                        android:text="23 LP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumRankedFlexPoints"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.495"
                        android:layout_marginBottom="16dp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/progWon" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:progress="60" android:scaleY="12"
                    android:background="@color/looseColor"/>
            <TextView
                    android:text="Win rate in %"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSumWin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/progWon"
                    app:layout_constraintTop_toTopOf="@+id/progWon"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp" tools:srcCompat="@tools:sample/backgrounds/scenic[7]"
                    android:id="@+id/imgSumC1" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@+id/imgSumC1" android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:id="@+id/constraintLayout" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout3" android:layout_marginBottom="8dp">
                <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/progPrimaryWin" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:progress="20" android:scaleY="12"
                        android:background="@color/looseColor"/>
                <TextView
                        android:text="Champion win rate in %"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumPrimaryWin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/progPrimaryWin"
                        app:layout_constraintBottom_toBottomOf="@+id/progPrimaryWin"
                        app:layout_constraintTop_toTopOf="@+id/progPrimaryWin"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@+id/imgSumC1" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:id="@+id/constraintLayout3"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginEnd="8dp">
                <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/progPrimary" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:progress="50" android:scaleY="12"
                        android:background="@color/notPlayed"/>
                <TextView
                        android:text="Champion pick rate in %"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumPrimaryPick"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/progPrimary"
                        app:layout_constraintBottom_toBottomOf="@+id/progPrimary"
                        app:layout_constraintTop_toTopOf="@+id/progPrimary"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp" tools:srcCompat="@tools:sample/backgrounds/scenic[9]"
                    android:id="@+id/imgSumC2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imgSumC2"
                    android:layout_marginEnd="8dp" android:id="@+id/constraintLayout2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout4" android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp">
                <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/progSecondaryWin" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:progress="80" android:scaleY="12"
                        android:background="@color/looseColor"/>
                <TextView
                        android:text="Champion win rate in %"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumSecondaryWin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/progSecondaryWin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/progSecondaryWin"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/imgSumC2" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/constraintLayout4" app:layout_constraintHorizontal_bias="0.5">
                <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/progSecondary" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:progress="40" android:scaleY="12"
                        android:background="@color/notPlayed"/>
                <TextView
                        android:text="Champion pick rate in %"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSumSecondaryPick"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/progSecondary"
                        app:layout_constraintEnd_toEndOf="@+id/progSecondary"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>