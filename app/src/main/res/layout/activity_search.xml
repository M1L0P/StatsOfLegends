<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="210dp" android:textSize="30sp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtSummonerName" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:hint="@string/search_txtinput_placeholder" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/spnServers"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnServers" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtSummonerName"
            android:spinnerMode="dropdown" app:layout_constraintTop_toTopOf="@+id/txtSummonerName"/>
    <com.google.android.material.button.MaterialButton
            android:text="@string/search_btn_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchBtnHistory" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSummonerName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:icon="@drawable/ic_stats_black_24dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="@string/search_btn_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchBtnSummary" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSummonerName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:icon="@drawable/ic_history_black_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>